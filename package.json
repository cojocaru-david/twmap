{
  "name": "@cojocarudavid/twmap",
  "version": "1.0.3",
  "description": "A CLI tool to extract and optimize Tailwind utility classes",
  "main": "dist/index.js",
  "bin": {
    "twmap": "bin/twmap.js"
  },
  "files": [
    "dist/",
    "bin/",
    "twmap.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cojocaru-david/twmap.git"
  },
  "bugs": {
    "url": "https://github.com/cojocaru-david/twmap/issues"
  },
  "homepage": "https://github.com/cojocaru-david/twmap#readme",
  "author": "Cojocaru David <contact@cojocarudavid.me>",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsx src/index.ts",
    "test": "cross-env NODE_ENV=test bun test",
    "start": "bun run build && bun run node bin/twmap.js",
    "twmap": "bun run build && bun run node bin/twmap.js",
    "lint": "eslint \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\""
  },
  "keywords": [
    "tailwind",
    "css",
    "cli",
    "optimization"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.27.5",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.6",
    "@sentry/node": "^9.32.0",
    "commander": "^14.0.0",
    "cssnano": "^7.0.7",
    "dotenv": "^16.5.0",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/babel__traverse": "^7.20.7",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ]
  }
}
